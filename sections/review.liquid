{% for block in section.blocks %}
<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="{{ block.settings.review_image | image_url }}" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">{{block.settings.title | escape }}</h5>
    <p class="card-text">{{block.settings.description | escape }}</p>
  </div>
</div>
 {% endfor %}
{% schema %}
 {
 	"name": "review",
  "settings": [],
  "blocks": [
    {
      "type": "image",
      "name": "block",
      "settings": [
        {
          "id": "title",
          "type": "text",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "color",
          "id": "description_text",
          "label": "Description Text"
        },
        {
          "type": "image_picker",
          "id": "review_image",
          "label": "Image"
        }
      ]
    }
  ],
   "presets": [
    {
      "name": "product review",
      "category": "product"
    }
  ]
 }
{% endschema %}

