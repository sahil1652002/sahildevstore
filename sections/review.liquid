<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />

<h2 class="faq__heading h2 text-center">Review</h2>
<div class="d-flex">
{% for block in section.blocks %}
<div class="card ms-3" style="width: 18rem;">
  <img class="card-img-top" src="{{ block.settings.review_image | image_url }}" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title"><strong>{{block.settings.title | escape }}</strong></h5>
    <p class="card-text" style="color:{{block.settings.description_text}}">{{block.settings.description | escape }}</p>
  </div>
</div>
 {% endfor %}
</div>
{% schema %}
 {
  "name": "review",
  "settings": [],
  "blocks": [
    {
      "type": "image",
      "name": "block",
      "settings": [
        {
          "id": "title",
          "type": "text",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "color",
          "id": "description_text",
          "label": "Description Text"
        },
        {
          "type": "image_picker",
          "id": "review_image",
          "label": "Image"
        }
      ]
    }
  ],
   "presets": [
    {
      "name": "product review",
      "category": "product"
    }
  ]
 }
{% endschema %}

